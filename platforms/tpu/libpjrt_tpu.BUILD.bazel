load("@aspect_bazel_lib//lib:copy_to_directory.bzl", "copy_to_directory")
load("@bazel_skylib//rules:copy_file.bzl", "copy_file")

copy_file(
    name = "libpjrt_tpu.so",
    src = "libtpu/libtpu.so",
    out = "lib/libpjrt_tpu.so",
)

copy_to_directory(
    name = "sandbox",
    srcs = [
        "lib/libpjrt_tpu.so",
    ],
)

cc_library(
    name = "libpjrt_tpu",
    data = [":sandbox"],
    visibility = ["@zml//platforms/tpu:__subpackages__"],
)
