load("@rules_cc//cc:cc_library.bzl", "cc_library")
load("@rules_zig//zig:defs.bzl", "zig_library")

cc_library(
    name = "zmlxcuda_lib",
    srcs = ["zmlxcuda.c"],
    visibility = ["@libpjrt_cuda//:__subpackages__"],
)

cc_library(
    name = "empty",
)

cc_library(
    name = "zmlxcuda",
    defines = ["ZML_RUNTIME_CUDA"],
)

cc_library(
    name = "libcuda_headers",
    hdrs = ["cuda.h"],
    deps = [
        "@libpjrt_cuda//:libcuda_headers",
    ],
)

zig_library(
    name = "cuda",
    import_name = "runtimes/cuda",
    main = "cuda.zig",
    visibility = ["//visibility:public"],
    deps = [
        "//pjrt",
    ] + select({
        "//runtimes:cuda.enabled": [
            "@libpjrt_cuda",
            ":libcuda_headers",
            ":zmlxcuda",
            "//async",
            "//stdx",
            "@rules_zig//zig/runfiles",
        ],
        "//conditions:default": [":empty"],
    }),
)

filegroup(
    name = "layers",
    srcs = [],
    visibility = ["//visibility:public"],
)
