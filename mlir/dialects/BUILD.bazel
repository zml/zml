load("@rules_zig//zig:defs.bzl", "zig_library")
load("//bazel:zig.bzl", "zig_cc_test")

zig_library(
    name = "dialects",
    srcs = [
        "arith.zig",
        "func.zig",
        "math.zig",
        "tensor.zig",
    ],
    import_name = "mlir/dialects",
    main = "dialects.zig",
    visibility = ["//visibility:public"],
    deps = [
        ":stablehlo",
        "//mlir",
